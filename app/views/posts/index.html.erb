
<h1>게시판</h1>


<%= render 'searches/search_form', post: @posts.klass %>





<table>
  <thead>
    <tr>
      <th>상품</th>
      <th>가격</th>
	  <th>찜</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.price %>원</td>
        <td><%= post.likes.size %>명이 찜함</td>

        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '상품 등록', new_post_path %>
