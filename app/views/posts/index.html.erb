
<h1>게시판</h1>
<%= link_to '홈', posts_path %>

<%= link_to '나의 당근', new_post_path %>

<table>
  <thead>
    <tr>
      <th>상품</th>
      <th>가격</th>
	  <th>찜</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.likes.size %>명이 찜함</td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '상품 등록', new_post_path %>
